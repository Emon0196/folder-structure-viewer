{
  "compilerOptions": {
    /* Environment */
    "target": "ES2022",                  // modern Node features
    "module": "NodeNext",                // needed for ESM
    "moduleResolution": "NodeNext",      // ensures correct resolution
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,


    /* File Layout */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    /* ESM Fix */
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
